@page
@model TasteRestaurant.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<br />

<h2 class="text-primary">Menu Item Details</h2>

<hr />

<form method="post">

    <div class="form-border row">

        <div class="col-sm-8">

                <div class="form-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CartObj.MenuItem.Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="@Model.CartObj.MenuItem.Name" disabled class="form-control" />
                    </div>
                </div>

                <br />
                <br />

                <div class="form-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CartObj.MenuItem.Description" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <textarea asp-for="@Model.CartObj.MenuItem.Description" disabled class="form-control"></textarea>
                    </div>
                </div>

                <br />
                <br />
                <br />

                <div class="form-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CartObj.MenuItem.Spicyness" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="@Model.CartObj.MenuItem.Spicyness" disabled class="form-control"
                                asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()"></select>
                    </div>
                </div>

                <br />
                <br />

                <div class="form-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CartObj.MenuItem.CategoryType.Name" class="custom-label">Category Type</label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="@Model.CartObj.MenuItem.CategoryType.Name" disabled class="form-control">
                            <option>@Model.CartObj.MenuItem.CategoryType.Name</option>
                        </select>
                    </div>
                </div>

                <br />
                <br />

                <div class="form-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CartObj.MenuItem.FoodType.Name" class="custom-label">Food Type</label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="@Model.CartObj.MenuItem.FoodType.Name" disabled class="form-control">
                            <option>@Model.CartObj.MenuItem.FoodType.Name</option>
                        </select>
                    </div>
                </div>

                <br />
                <br />

            <div class="form-group">
                <div class="col-sm-4">
                    <label asp-for="@Model.CartObj.Count" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="@Model.CartObj.Count" min="1" class="form-control" />
                    <span asp-validation-for="@Model.CartObj.Count" class="text-danger"></span>
                </div>
            </div>

            <br />
            <br />

            <div class="form-group">
                <div class="col-sm-4"></div>
                <div class="col-sm-8">
                    <input type="submit" style="width:100%" class="btn btn-success" value="Add To Cart" />
                </div>
            </div>
        </div>

        <div class="col-sm-1"></div>

        <div class="col-sm-3">
            @if (Model.CartObj.MenuItem.Image == null)
            {
                <img width="100%" src="~/images/defaultMenuItemImage.jpg" />
            }
            else
            {
                <img width="100%" src="@Model.CartObj.MenuItem.Image" />
            }
        </div>

    </div>

    <div class="form-group">
        <div>
            <a asp-page="Index" style="margin-top: 20px;" class="btn btn-primary">Back To List <i class="fas fa-backward"></i></a>
        </div>
    </div>

    <input asp-for="CartObj.MenuItemId" hidden />

</form>
<!--We import the ValidationScripts so we can have validtions for out fields.-->
@section Scripts {
    @{Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
