@page
@model TasteRestaurant.Pages.CategoryTypes.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<br />

<h2>Delete Category Type</h2>

<hr />

<div>
    <form method="post">
        <div class="form-border">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input  type="hidden" asp-for="categoryType.Id"/> 


            <div class="form-group">
                <div class="col-sm-2">
                    <label asp-for="categoryType.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input disabled value="@Model.categoryType.Name" asp-for="categoryType.Name" class="form-control" />
                </div>
                <span asp-validation-for="categoryType.Name" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <div class="col-sm-2">
                    <label asp-for="categoryType.DisplayOrder" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input disabled value="@Model.categoryType.DisplayOrder" asp-for="categoryType.DisplayOrder" class="form-control" />
                </div>
                <span asp-validation-for="categoryType.DisplayOrder" class="text-danger"></span>
            </div>
        </div>

        <br />
        <br />

        <div class="form-group">
            <div class="col-sm-4">
                <a asp-page="Index" class="btn btn-primary">Back <i class="fas fa-backward"></i></a>
                <button type="submit" class="btn btn-danger" asp-route-id="@Model.categoryType.Id">Delete <i class="fas fa-trash-alt"></i></button>
            </div>
        </div>

        <br />
        <br />

    </form>
</div>

