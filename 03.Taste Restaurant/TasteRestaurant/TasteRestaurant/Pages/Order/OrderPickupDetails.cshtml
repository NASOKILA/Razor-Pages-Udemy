@page
@model TasteRestaurant.Pages.Order.OrderPickupDetailsModel
@{
    ViewData["Title"] = "OrderPickupDetails";
}


<h2>Confirm Pickup Details : </h2>

<br/>

<style>

    .form-border-details {
        border: 1px solid #bbb9b9;
        padding: 20px;
    }

    .item-count {
        border:1px solid grey; 
        background-color:grey; 
        border-radius:100%; 
        padding:1px 2px 0px 2px; 
        color:white;
    }

</style>

<div class="row form-border-details">

    <form method="post">
        <div class="col-sm-8" style="border-right:1px solid #bbb9b9;">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="@Model.OrderDetailsTotal.orderHeader.User.FullName"></label>
                </div>
                <div class="col-sm-8 col-sm-offset-2">
                    <input asp-for="@Model.OrderDetailsTotal.orderHeader.User.FullName" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="@Model.OrderDetailsTotal.orderHeader.User.Email"></label>
                </div>
                <div class="col-sm-8 col-sm-offset-2">
                    <input asp-for="@Model.OrderDetailsTotal.orderHeader.User.Email" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="@Model.OrderDetailsTotal.orderHeader.User.PhoneNumber"></label>
                </div>
                <div class="col-sm-8 col-sm-offset-2">
                    <input asp-for="@Model.OrderDetailsTotal.orderHeader.User.PhoneNumber" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="@Model.OrderDetailsTotal.orderHeader.OrderTotal"></label>
                </div>
                <div class="col-sm-8 col-sm-offset-2">
                    <input asp-for="@Model.OrderDetailsTotal.orderHeader.OrderTotal" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="@Model.OrderDetailsTotal.orderHeader.OrderDate"></label>
                </div>
                <div class="col-sm-8 col-sm-offset-2">
                    <input asp-for="@Model.OrderDetailsTotal.orderHeader.OrderDate" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="@Model.OrderDetailsTotal.orderHeader.Comments"></label>
                </div>
                <div class="col-sm-8 col-sm-offset-2">
                    <input asp-for="@Model.OrderDetailsTotal.orderHeader.Comments" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-sm-4 pull-right">
            
            <p style="margin-top:15px;" >Order No : @Model.OrderDetailsTotal.orderHeader.Id</p>
            <div style="margin-left:15px;">

                <ul class="list-group">
                    @foreach (var item in Model.OrderDetailsTotal.orderDetailsList)
                    {
                        <li class="list-group-item">
                            @item.MenuItem.Name
                            <span class="badge">
                                @item.Count
                            </span>
                        </li>
                    }
                </ul>

            </div>

            <br/>

            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Confirm PickUp</button>

        </div>
    </form>
</div>
