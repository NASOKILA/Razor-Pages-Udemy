@page
@model BookList_RazorPages.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<style>
    .create-book {
        border : 1px solid #bbb9b9;
        border-radius: 5px;
    }

    .row {
        padding-left: 50px;
        padding-top: 30px;
    }

    .validation {
        position: relative;
        left: 140px;
        top: 10px;
        padding: 1rem;
    }

</style>

<h2>Create Book</h2>

<br/>

<div class="create-book">
    <form method="post">
        <div class="row">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.ISPN"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.ISPN" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.ISPN" class="text-danger validation"></span>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Title"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Title" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Title" class="text-danger validation"></span>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Author" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Author   " class="text-danger validation"></span>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Price"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Price" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Price" class="text-danger validation"></span>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Avaliability"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Book.Avaliability" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Book.Avaliability" class="text-danger validation"></span>
            </div>

            <br />

            <div class="form-group">
                <div class="row">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-page="Index" class="btn btn-primary">Back</a>
                </div>
            </div>

            <br />
            <br />
        </div>
    </form>
</div>